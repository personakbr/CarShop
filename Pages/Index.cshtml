@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row mt-5 mb-2">
    
    @{
        foreach (var car in Model.Cars)
        {
        <div class="col-lg-4">
            <img class="img-thumbnail" src="@car._img" alt="@car._name" />
            <h2>@car._name</h2>

            <p> @car._shortDesc </p>
            <p> Цена: @car._price.ToString("c")</p>
            <p><a class="btn btn-warning" href="#">Подробнее</a></p>
        </div>
        }

    }

</div>

