@model CarShop.Data.Models.Car


<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model._img" alt="@Model._name" />
    <h2>@Model._name</h2>

    <p> @Model._shortDesc </p>
    <p> Цена: @Model._price.ToString("c")</p>
    <p><a class="btn btn-warning" href="#">Подробнее</a></p>
    <p> <a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-ID="@Model.ID">Оформить покупку</a> </p>
</div>
    
