@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Удаление аккаунта";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
       
        <strong>Внимание: удаление аккаунта приведет к безвозвратной полной потери доступа и полному уничтожению аккаунта из всех баз данных.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            @*<button class="btn btn-primary" type="submit">Загрузить</button>*@
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Удалить</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}