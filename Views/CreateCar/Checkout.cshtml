@model Car
@{
    Layout = "_Layout";
}
<div class="row">
    <h3>Добавить новое объявление</h3>
</div>
    
    <div class="row">

        <form asp-action="Checkout" method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="_name"></label>
                <div class="col-md-12">
                    <input asp-for="_name" class="form-control" />
                    <span asp-validation-for="_name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="_shortDesc"></label>
                <div class="col-md-12">
                    <input asp-for="_shortDesc" class="form-control" />
                    <span asp-validation-for="_shortDesc" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="_longDesc"></label>
                <div class="col-md-12">
                    <input asp-for="_longDesc" class="form-control" />
                    <span asp-validation-for="_longDesc" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="_img"></label>
                <div class="col-md-12">
                    <input asp-for="_img" class="form-control" />
                    <span asp-validation-for="_img" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="_price"></label>
                <div class="col-md-12">
                    <input asp-for="_price" class="form-control" />
                    <span asp-validation-for="_price" class="text-danger"></span>
                </div>

            </div>
            <input class="btn btn-success" type="submit" value="Отправить" />
        </form>
    </div>
